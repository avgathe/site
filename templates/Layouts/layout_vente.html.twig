{% extends 'Layouts/layout.html.twig' %}

{% block title %}Vente{% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/layout_vente.css') }}">
{% endblock %}

{% block body %}
    <div id="flash">
        {% include 'Layouts/_flash.html.twig' %}
    </div>

    <div id="header">
        {% include 'Layouts/_header.html.twig' %}
    </div>

    <div id="menu">
        {{ render(controller('App\\Controller\\AccueilController::menuAction')) }}
    </div>

    <div id="vue">
        {% block vue %}{% endblock %}
    </div>

    <div id="footer">
        {% include 'Layouts/_footer.html.twig' %}
    </div>
{% endblock %}
